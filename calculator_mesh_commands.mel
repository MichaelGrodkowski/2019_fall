//Addition
global proc float Add(float $num[])
{

    float $total;
    $total = $num[0];
    
for( $i = 1; $i<size($num); $i++)
    {$total = $total + $num[$i];}

//$total = $total/size($num);

    return $total;
}
//Add({2,5,21});




//Subtraction
global proc float Sub(float $num[])
{

    float $total;
    $total = $num[0];

for( $i = 1; $i<size($num); $i++)
    {$total = $total - $num[$i];}

    return $total;
}
//Sub({2,5,21});




//Multiplication
global proc float Mult(float $num[])
{

    float $total;
    $total = $num[0];

for( $i = 1; $i<size($num); $i++)
    {$total = $total * $num[$i];}

    return $total;
}
//Mult({2,5,21});




//DIVISION
global proc float Divis(float $num[])
{

    float $total;
    $total = $num[0];

for( $i = 1; $i<size($num); $i++)
    {$total = $total / $num[$i];}

    return $total;
}
//Divis({2,5,21});



//Mean
global proc float meanNum(float $num[])
{
    float $total;
    $total = $num[0];

for( $i = 1; $i<size($num); $i++)
    {$total = $total + $num[$i];}

    $total = $total/size($num);

    return $total;
}
//meanNum({2,5,21});



//Median
global proc float Median(float $values[])
    {
        $values = `sort $values`;
        print ("Values Sorted:" + "\n");
        print $values; 
        float $median; 

        int $sortedValues = `size($values)`;
        print ("Number of Values:" + "\n"); 
        print ($sortedValues + "\n");

        if($sortedValues % 2 != 0)
            {
                int $middleValue = ($sortedValues / 2);
                $median = $values[$middleValue]; 

                print ("Median:" + "\n" + $median);
                return $median; 
            }
        if($sortedValues % 2 == 0)
            {
                int $middleValue = ($sortedValues / 2);
                $median = ($values[$middleValue] + $values[$middleValue - 1]) / 2;

                print ("Median:" + "\n" + $median);
                return $median;
            }

        return 0; 
    }

