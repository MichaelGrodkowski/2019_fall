proc operationType (float $operations, float $listofNum[])
{    
    if ($operations == 0)
     {  
        print (Add($listofNum));  
     }
     else if ($operations == 1) 
     {
         print (Sub($listofNum));
     }
     else if  ($operations == 2)
     {
         print (Mult($listofNum));
     }
     else if ($operations == 3)
     {
         print (Divis($listofNum)); 
     }
     else if ($operations == 4)
     {
         print (meanNum($listofNum));    
     }
     else if ($operations == 5)
     {
         print (Median($listofNum));
     }
     
     else if ($operations == 7)
     {
         print (squareNum($listofNum));
   }

}
